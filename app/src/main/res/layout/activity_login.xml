<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3fFFFFF"
    android:paddingHorizontal="35dp"
    android:paddingVertical="140dp"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageLogo_id"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:src="@drawable/vr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textTitle_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/welcome_to_login"
        android:textColor="@color/blackDarkGray"
        android:textSize="29sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageLogo_id" />

    <EditText
        android:id="@+id/usrMail_id"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/bg_text"
        android:drawableStart="@drawable/ic_person"
        android:elevation="7dp"
        android:gravity="center"
        android:hint="@string/username_or_email"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingHorizontal="35dp"
        android:textColor="@color/blackDarkGray"
        android:textColorHint="@color/blueGray"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle_id" />

    <EditText
        android:id="@+id/password_id"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_text"
        android:drawableStart="@drawable/ic_lock"
        android:elevation="7dp"
        android:gravity="center"
        android:hint="@string/password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingHorizontal="35dp"
        android:textColor="@color/blackDarkGray"
        android:textColorHint="@color/blueGray"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usrMail_id" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton_id"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="21sp"
        app:cornerRadius="25dp"
        android:backgroundTint="#E500B50D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_id" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerButton_id"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:shadowColor="@color/black"
        android:text="@string/register"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="21sp"
        app:cornerRadius="25dp"
        android:elevation="8dp"
        android:onClick="btnRegister"
        android:backgroundTint="#E500B50D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton_id" />


</androidx.constraintlayout.widget.ConstraintLayout>